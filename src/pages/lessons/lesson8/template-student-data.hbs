<li
	class='shadow-ios bg-bg/10 dark:bg-sidebar/10 relative flex w-[350px] max-w-[350px] flex-col gap-0.5 rounded-md px-4 py-2 backdrop-blur-[5px]'
>
	<span>
		{{firstName}}
		{{lastName}}
	</span>
	<span>
		Вік:
		{{age}}
	</span>
	<span>
		Курс:
		{{course}}
	</span>
	<span>
		Факультет:
		{{faculty}}
	</span>

	<span
		class='studentContextMenu absolute top-1 right-2 cursor-pointer text-black dark:text-white'
		data-index='{{index}}'
	>
		<svg
			xmlns='http://www.w3.org/2000/svg'
			width='24'
			height='24'
			viewBox='0 0 24 24'
			fill='none'
			stroke='currentColor'
			stroke-width='2'
			stroke-linecap='round'
			stroke-linejoin='round'
			class='lucide lucide-ellipsis-icon lucide-ellipsis'
		>
			<circle cx='12' cy='12' r='1' />
			<circle cx='19' cy='12' r='1' />
			<circle cx='5' cy='12' r='1' />
		</svg>

		<div
			class='bg-bg/10 shadow-ios studentContextMenuList absolute top-6 right-0 z-10 hidden w-32 overflow-hidden rounded-md backdrop-blur-[5px]'
			data-index='{{index}}'
		>
			<button
				class='studentBtnEdit flex w-full flex-row items-center justify-baseline gap-1 px-2 py-2 backdrop-blur-[5px] transition-colors duration-300 ease-in-out hover:bg-white/10'
				data-index='{{index}}'
			>
				<svg
					xmlns='http://www.w3.org/2000/svg'
					width='24'
					height='24'
					viewBox='0 0 24 24'
					fill='none'
					stroke='currentColor'
					stroke-width='2'
					stroke-linecap='round'
					stroke-linejoin='round'
					class='lucide lucide-pencil-line-icon lucide-pencil-line'
				>
					<path d='M12 20h9' />
					<path
						d='M16.376 3.622a1 1 0 0 1 3.002 3.002L7.368 18.635a2 2 0 0 1-.855.506l-2.872.838a.5.5 0 0 1-.62-.62l.838-2.872a2 2 0 0 1 .506-.854z'
					/>
					<path d='m15 5 3 3' />
				</svg>
				Редагувати
			</button>

			<button
				class='studentBtnDelete flex w-full flex-row items-center justify-baseline gap-1 px-2 py-2 text-red-600 backdrop-blur-[5px] transition-colors duration-300 ease-in-out hover:bg-white/10'
				data-index='{{index}}'
			>
				<svg
					xmlns='http://www.w3.org/2000/svg'
					width='24'
					height='24'
					viewBox='0 0 24 24'
					fill='none'
					stroke='currentColor'
					stroke-width='2'
					stroke-linecap='round'
					stroke-linejoin='round'
					class='lucide lucide-trash2-icon lucide-trash-2'
				>
					<path d='M3 6h18' />
					<path d='M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6' />
					<path d='M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2' />
					<line x1='10' x2='10' y1='11' y2='17' />
					<line x1='14' x2='14' y1='11' y2='17' />
				</svg>
				Видалити
			</button>
		</div>
	</span>
</li>